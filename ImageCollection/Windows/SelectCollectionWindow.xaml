<Window x:Class="ImageCollection.SelectCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCollection"
        mc:Ignorable="d"
        Height="120" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        FontSize="14">
    <Grid Background="{DynamicResource Base.Grid.Background}">
        <ComboBox x:Name="comboBox_CollectionNames"  Margin="10,10,10,0" VerticalAlignment="Top" Style="{StaticResource ComboBoxStyle}"/>
        <Button Content="Применить" HorizontalAlignment="Right" Margin="0,40,115,0" VerticalAlignment="Top" Width="150" Height="30" Style="{StaticResource ButtonStyle}" Click="Button_Apply_Click"/>
        <Button Content="Закрыть" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Width="100" Height="30" Style="{StaticResource ButtonStyle}" Click="Button_Close_Click"/>
    </Grid>
</Window>
