<Window x:Class="ImageCollection.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCollection"
        mc:Ignorable="d"
        FontSize="14"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Height="190" 
        Width="400">
    <Grid>
        <TextBlock Text="Начало Работы" Style="{StaticResource TextBlockStyle}" HorizontalAlignment="Center" FontWeight="Medium" FontSize="18" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Открыть папку" Height="30" Margin="10,40,10,0" VerticalAlignment="Top" Click="Button_OpenFolder_Click"/>
        <Button Content="Открыть коллекции" Height="30" Margin="10,75,10,0" VerticalAlignment="Top" Click="Button_OpenCollections_Click"/>
        <Button x:Name="button_LastOpenCollection" Content="Открыть последнии открытые коллекции" Height="30" Margin="10,110,10,0" VerticalAlignment="Top" Click="Button_LastOpenCollections_Click"/>
    </Grid>
</Window>
