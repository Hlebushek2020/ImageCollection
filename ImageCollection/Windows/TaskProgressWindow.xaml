<Window x:Class="ImageCollection.TaskProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCollection"
        mc:Ignorable="d"
        Height="250" 
        Width="600"
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Background="{DynamicResource Base.Grid.Background}">
        <ProgressBar x:Name="progressBar_Progress" Height="20" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="richTextBox_Log" Margin="10,35,10,10" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
